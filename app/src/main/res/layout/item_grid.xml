<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/grid"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/pd3"
    android:orientation="vertical"
    android:padding="@dimen/pd3">

    <TextView
        android:id="@+id/txt_position"
        style="@style/light_primary_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/ps14" />

    <TextView
        style="@style/light_primary_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/pd36"
        android:singleLine="true"
        android:text="@string/signal.strength"
        android:textSize="@dimen/ps14" />

    <TextView
        android:layout_marginBottom="@dimen/pd36"
        android:id="@+id/txt_value"
        style="@style/light_primary_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/pd12"
        android:textSize="@dimen/ps18" />


</LinearLayout>