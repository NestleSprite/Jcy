<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:elevation="4dp"
        android:background="@color/white"
        android:paddingBottom="@dimen/pd9"
        android:paddingLeft="@dimen/pd12"
        android:paddingRight="@dimen/pd12"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="@dimen/pd9"
            android:textSize="@dimen/ps14"
            android:text="信号强度未达标的为："
            style="@style/dark_primary_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:maxLines="2"
            style="@style/dark_primary_txt"
            android:id="@+id/txt_sensors"
            android:textSize="@dimen/ps14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>