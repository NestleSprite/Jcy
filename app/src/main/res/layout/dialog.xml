<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/pd24"
    android:paddingRight="@dimen/pd24">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/pd16"
        android:paddingTop="@dimen/pd16">

        <ImageView
            android:layout_gravity="end"
            android:id="@+id/img_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/pd12"
            android:paddingBottom="@dimen/pd21"
            android:paddingLeft="@dimen/pd36"
            android:src="@mipmap/ic_cancel" />

        <TextView
            android:textColor="@color/black"
            android:id="@+id/txt_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />

        <TextView
            android:textColor="@color/black"
            android:id="@+id/txt_signal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pd9"
            />
        <TextView
            android:textColor="@color/black"
            android:id="@+id/txt_position"
            android:text="传感器位置：31号线圈"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pd9"
            />

        <TextView
            android:id="@+id/txt_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/pd12"

            android:textSize="@dimen/ps18" />


    </LinearLayout>
</LinearLayout>