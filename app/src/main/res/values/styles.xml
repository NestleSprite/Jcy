<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.Activity" parent="AppTheme">
        <item name="android:windowBackground">@color/grey.100</item>
    </style>

    <style name="dark_primary_txt">
        <item name="android:textColor">@color/black</item>
        <item name="android:alpha">0.87</item>
    </style>

    <style name="dark_secondary_txt">
        <item name="android:textColor">@color/black</item>
        <item name="android:alpha">0.54</item>
    </style>

    <style name="dark_disabled_txt">
        <item name="android:textColor">@color/black</item>
        <item name="android:alpha">0.38</item>
    </style>

    <style name="dark_dividers">
        <item name="android:background">@color/black</item>
        <item name="android:alpha">0.12</item>
    </style>


    <style name="light_primary_txt">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="light_secondary_txt">

        <item name="android:textColor">@color/white</item>
        <item name="android:alpha">0.7</item>
    </style>

    <style name="light_disabled_txt">
        <item name="android:textColor">@color/white</item>
        <item name="android:alpha">0.5</item>
    </style>

    <style name="light_dividers">
        <item name="android:background">@color/white</item>
        <item name="android:alpha">0.12</item>
    </style>
    <style name="big_button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/ps14</item>
        <item name="android:background">@drawable/shp_green_corner_round</item>
        <item name="android:layout_width">@dimen/pd198</item>
        <item name="android:layout_height">@dimen/pd36</item>
    </style>

</resources>
